<% if( page.type != "archives_shuoshuo") { %>
<article class="post post-full card bg-white shadow-sm border-0 <%= theme.enable_into_article_animation ? 'post-preview' : '' %>">
	<header class="post-header text-center<%= has_thumbnail(post, theme) ? ' post-header-with-thumbnail' : ''%>">
		<%
			if (has_thumbnail(post, theme) && !theme.show_thumbnail_in_banner_in_content_page){
				let thumbnail_url = get_thumbnail(post, theme); %>
				<img class='post-thumbnail lazyload' src='<%= thumbnail_url %>' alt='thumbnail'></img>
				<div class='post-header-text-container'>
			<% }
			if (has_thumbnail(post, theme) && theme.show_thumbnail_in_banner_in_content_page){
				let thumbnail_url = get_thumbnail(post, theme); %>
				<style>
					body section.banner {
						background-image: url(<%= thumbnail_url %>) !important;
					}
				</style>
			<% }
		%>
		<% if(!post.fontawesome_iconname == "") { %>
			<i class="fa <%= post.fontawesome_iconname %>"></i>&nbsp;&nbsp
		<% } %>
		<a class="post-title"><%- post.title %></a>
                <% if (!post.english_name == ""){ %>
                  &nbsp;&nbsp;<span style="font-size:9px;color:gray;" id="post-englist-name"><%- post.english_name %></span>
                <% } %>
		<div class="post-meta">
			<div class="post-meta-detail">
				<i class="fa fa-user" aria-hidden="true"></i> <font>暗梦先生呀~</font> <div class="post-meta-devide">|</div>
			</div>
			<%
				let meta_list = theme.article_meta.split('|');
				for (let i in meta_list){
					if (meta_list[i] == 'time'){ %>
						<% if (i > 0){ %>
						<% } %>
						<div class="post-meta-detail post-meta-detail-time">
							<i class="fa fa-clock-o" aria-hidden="true"></i>
							<time title="发布于 <%- full_date(post.date, 'YYYY-M-D H:mm:ss') %> | 编辑于 <%- full_date(post.updated, 'YYYY-M-D H:mm:ss') %>"><%- full_date(post.date, 'YYYY-M-D') %>
							</time>
						</div>
					<% }
					if (meta_list[i] == 'edittime'){ %>
						<% if (i > 0){ %>
							<div class="post-meta-devide">|</div>
						<% } %>
						<div class="post-meta-detail post-meta-detail-edittime">
							<i class="fa fa-clock-o" aria-hidden="true"></i>
							<time title="发布于 <%- full_date(post.date, 'YYYY-M-D H:mm:ss') %> | 编辑于 <%- full_date(post.updated, 'YYYY-M-D H:mm:ss') %>"><%- full_date(post.updated, 'YYYY-M-D H:mm') %>
							</time>
						</div>
					<% }
					if (meta_list[i] == 'read'){ %>
						<% if (i > 0){ %>
						<% } %>
					<% }
					if (meta_list[i] == 'words'){ %>
						<% if (i > 0){ %>
							<div class="post-meta-devide">|</div>
						<% } %>
						<div class="post-meta-detail post-meta-detail-words">
							<i class="fa fa-file-word-o" aria-hidden="true"></i>
							<%= wordcount(post.content) %> 字
						</div>
					<% }
					if (meta_list[i] == 'info'){ %>
                                                <% if (!post.info == ""){ %>
                                                        <div class="post-meta-devide">|</div>
                                                        <%- post.info %>
                                                <% } %>
                                        <% }

				}
			%>
		</div>
		<%
			if (has_thumbnail(post, theme) && !theme.show_thumbnail_in_banner_in_content_page){ %>
				</div>
			<% }
		%>
	</header>
	<div class="post-content" id="post_content">
		<%- argon_preprocess_article(post.content, theme, false) %>
	</div>
</article>

	<% if (page.comment) { %>
		<div class="post post-full card bg-white shadow-sm border-0 no-waterflow">
		<div class="mdui-progress">
		  <div class="mdui-progress-indeterminate mdui-follow-argon-color"></div>
		</div><br>
		<div id="post_comment">
		<% if(theme.liuyanban_comment.enable) { %>
		  <div id="twikoo-comments"></div>
		  <script>
			twikoo.init({
				envId: anmeng_blog_config.twikoo.twikoo_url,
  				el: '#twikoo-comments',
  				path: '/liuyanban',
  				lang: 'zh-CN',
				onCommentLoaded: function () {
    				document.querySelectorAll('#twikoo a').forEach(function(aEl){
      					if(!aEl.href.startsWith(window.location.origin) && !aEl.href.startsWith("<%= config.url %>")){

        					aEl.href='/go/?url='+encodeURI(aEl.href.replace(/\/$/, ''));
      					}
    				});
  				}
			})
		</script>
		<% } else { %>
			<header class="post-header text-center" style="margin-top:40px;margin-bottom:10px;">
				<i style="font-size:80px;opacity:.6;margin-top:30px;margin-bottom:15px;" aria-hidden="true" class="fa fa-minus-circle"></i>
				<h1 class="post-title">留言板评论功能已关闭</h1>
							<span>暗梦：抱歉，旅行者们，留言板评论功能正在维护中，需要暂时关闭，请见谅哈。</span>
				</header>
		<% } %>
		</div>
		</div>
	<% } %>

<% } else { %>
    <% site.posts.sort('date', -1).each(function(post){
    let year = post.date.format('YYYY');
    if(post.type == "shuoshuo") { %>

<div class="shuoshuo-preview-container shuoshuo-foldable card bg-white shadow-sm border-0" id="shuoshuo_preview" style="transition: none 0s ease 0s;">
                <% if (!post.title == ""){ %>
                  <a class="shuoshuo-title" href="<%= url_for(post.path) %>"><%- post.title %></a>
                <% } %>
                <div class="shuoshuo-content">
                        <%- post.content %>
                </div>


        <div class="shuoshuo-preview-meta">
                <span>
                        <i class="fa fa-user" aria-hidden="true"></i>
                        暗梦先生呀~
                        <div class="post-meta-devide">|</div>
                        <i class="fa fa-calendar-o" aria-hidden="true"></i>
                        <%- full_date(post.date, 'YYYY-M-D') %>
                        <div class="post-meta-devide">|</div>
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                        <%- full_date(post.date, 'H:mm') %>
                </span>

        <a class="shuoshuo-preview-link btn btn-outline-primary btn-icon-only rounded-circle" type="button" href="<%= url_for(post.path) %>">
                <span class="btn-inner--icon"><i class="fa fa-arrow-right"></i></span>
            </a>

        </div>
</div>
    <% } }); %>

<% } %>
