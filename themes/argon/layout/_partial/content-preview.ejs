<% if (post.type != "shuoshuo" || (is_archive() && page.year != undefined)) { %>

<% if(is_archive() && page.year != undefined && post.type != "shuoshuo" || !is_archive()) { %>
<article class="post card bg-white shadow-sm post-content-container border-0 <%= theme.enable_into_article_animation ? 'post-preview' : '' %>">
	<header class="post-header text-center<%= has_thumbnail(post, theme) ? ' post-header-with-thumbnail' : ''%>">
		<%
			if (has_thumbnail(post, theme)){
				let thumbnail_url = get_thumbnail(post, theme); %>
				<img class='post-thumbnail lazyload' src='<%= thumbnail_url %>' alt='thumbnail'></img>
				</header>
			<% }
		%>
		<div class='post-header-text-container <%= has_thumbnail(post, theme) ? "with-thumbnail-post-header-text-container" : "" %>'>
		<a class="post-title" href="<%= url_for(post.path) %>"><%- post.title %></a>
		<div class="post-meta">
			<div class="post-meta-detail">
				<i class="fa fa-user" aria-hidden="true"></i> <font>暗梦先生呀~</font> <div class="post-meta-devide">|</div>
			</div>
			<%
				let meta_list = theme.article_meta.split('|');
				for (let i in meta_list){
					if (meta_list[i] == 'time'){ %>
						<% if (i > 0){ %>
						<% } %>
						<div class="post-meta-detail post-meta-detail-time">
							<i class="fa fa-clock-o" aria-hidden="true"></i>
							<time><%- full_date(post.date, 'YYYY-M-D') %>
							</time>
						</div>
					<% }
					if (meta_list[i] == 'edittime'){ %>
						<% if (i > 0){ %>
							<div class="post-meta-devide">|</div>
						<% } %>
						<div class="post-meta-detail post-meta-detail-edittime">
							<i class="fa fa-clock-o" aria-hidden="true"></i>
							<time title="发布于 <%- full_date(post.date, 'YYYY-M-D H:mm:ss') %> | 编辑于 <%- full_date(post.updated, 'YYYY-M-D H:mm:ss') %>"><%- full_date(post.updated, 'YYYY-M-D H:mm') %>
							</time>
						</div>
					<% }
					if (meta_list[i] == 'categories' && post.categories.length > 0){ %>
						<% if (i > 0){ %>
							<div class="post-meta-devide">|</div>
						<% } %>
						<div class="post-meta-detail post-meta-detail-categories">
							<i class="fa fa-bookmark-o" aria-hidden="true"></i>
							<%- list_categories(post.categories, {
								show_count: false,
								class: 'post-meta-detail-catagory',
								style: 'none',
								separator: ' , '
							}) %>
						</div>
					<% }
					if (meta_list[i] == 'read'){ %>
						<% if (i > 0){ %>
						<% } %>
					<% }
					if (meta_list[i] == 'words'){ %>
						<% if (i > 0){ %>
							<div class="post-meta-devide">|</div>
						<% } %>
						<div class="post-meta-detail post-meta-detail-words">
							<i class="fa fa-file-word-o" aria-hidden="true"></i>
							<%= wordcount(post.content); %> 字
						</div>
					<% } 
				}
			%>
		</div>
		<%
			if (has_thumbnail(post, theme)){ %>
				</div>
			<% }
		%>
	</header>

	<div class="post-content">
		<% if (theme.excerpt) { %>
			<% if (post.excerpt) { %>
				<%- post.excerpt %>
			<% } else { %>
				<%- getexcerpt(post.content, 50, true) %>
			<% } %>
		<% } else { %>
			<%- argon_preprocess_article(post.content, theme, true) %>
		<% } %>
	</div>

	<% if (post.tags.length) { %>
		<div class="post-tags">
			<i class="fa fa-tags" aria-hidden="true"></i>
			<%- list_tags(post.tags, {
				show_count: false,
				class: 'tag badge badge-secondary post-meta-detail-tag ',
				style: 'none',
				separator: ''
			}) %>
		</div>
	<% } %>
</article>
<% } %>
<% } else { %>
<div class="shuoshuo-preview-container shuoshuo-foldable card bg-white shadow-sm border-0" id="shuoshuo_preview" style="transition: none 0s ease 0s;">
		<% if (!post.title == ""){ %>
		  <a class="shuoshuo-title" href="<%= url_for(post.path) %>"><%- post.title %></a>
                <% } %>
		<div class="shuoshuo-content">
			<%- post.content %>
		</div>
		
	
	<div class="shuoshuo-preview-meta">
		<span>
			<i class="fa fa-user" aria-hidden="true"></i>
			暗梦先生呀~
			<div class="post-meta-devide">|</div>
			<i class="fa fa-calendar-o" aria-hidden="true"></i> 
			<%- full_date(post.date, 'YYYY-M-D') %>
			<div class="post-meta-devide">|</div>
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                        <%- full_date(post.date, 'H:mm') %>
						<% if (!post.location == "") { %>
							<div class="post-meta-devide">|</div>
							<i class="fa fa-location-arrow" aria-hidden="true"></i>
							<%- post.location %> 
						<% } %>
		</span>

        <a class="shuoshuo-preview-link btn btn-outline-primary btn-icon-only rounded-circle" type="button" href="<%= url_for(post.path) %>">
		<span class="btn-inner--icon"><i class="fa fa-arrow-right"></i></span>
	    </a>

	</div>
</div>
<% } %>
